<div class="content_post">
  <a href="/users/<%= article.user_id %>">
    <span></span><%= article.user.name %></a>
       <div class="more">
         <ul class="more_list">
          <li>
            <%= link_to '詳細', "/articles/#{article.id}", method: :get %>
          </li>

          <% if user_signed_in? && current_user.id == article.user_id %>
           <li>
              <%= link_to '編集', "/articles/#{article.id}/edit", method: :get %>
           </li>
           <li>
             <%= link_to '削除', "/articles/#{article.id}", method: :delete %>
           </li>
         </ul>
       </div>
  <% end %>

  <div class=""><img src="<%= article.image %>"></div>
  <%= simple_format(article.text) %>
</div>
